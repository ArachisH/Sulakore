<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GlobalFlazzyProject>..\..\Flazzy\Flazzy\Flazzy.csproj</GlobalFlazzyProject>
    <LocalFlazzySubmodule>$(SolutionDir)Submodules\Flazzy\Flazzy\Flazzy.csproj</LocalFlazzySubmodule>
  </PropertyGroup>

  <Choose>
    <When Condition="Exists($(LocalFlazzySubmodule))">
      <ItemGroup>
        <ProjectReference Condition="Exists($(LocalFlazzySubmodule))" Include="$(LocalFlazzySubmodule)" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Condition="Exists($(GlobalFlazzyProject))" Include="$(GlobalFlazzyProject)" />
      </ItemGroup>
    </Otherwise>
  </Choose>

</Project>